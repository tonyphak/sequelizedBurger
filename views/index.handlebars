<div class="container">
<div class="container" id="header">
    <div class="col-lg-4 offset-lg-4 title text-center">
      <h1>
        Eat Da Burger!
      </h1>
    </div>
    <div class="col-lg-4 offset-lg-4 tracker text-center">
      <h2>
        Burger Tracker
      </h2>
    </div>
</div>

<div class="container">
  <div class="row">
  <div class="col-lg-5 offset-lg-1 dv">
  <p class="devour">Devour a Burger!</p>
  <ul>
    {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
  </ul>
</div>
<div class="col-lg-5 dv">
  <p class="devoured">Devoured Burgers!</p>

  <ul>
    {{#each burgers}} {{#if devoured}}  
      <li>{{id}}. {{burger_name}} <button class="delete-burger btn-xs btn-outline-danger" data-id="{{this.id}}">DELETE!</button></li>
    {{/if}} {{/each}}
  </ul>
</div>
</div>
</div>
<div class="col-lg-4 offset-lg-4">

  <p class="add">Add a Burger</p>

  <form class="create-form">

    <div>
      <label class="label" for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name" class="input" required>
    </div>

    <button class="btn-xs btn-outline-primary" type="submit ">Add Burger</button>
  </form>
  <img src="/assets/img/burgerThumbs.jpg" alt="burgerFace" width="250px" height="250px" class="burgerthumbs">
  </div>
  </div>

